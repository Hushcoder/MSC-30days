// REVERSE INTEGER

class Solution {
public:
    int reverse(int x) {
        int rev=0;
        while(abs(x)>=1){
            int digit=x%10;
            if(rev<INT_MIN/10 or rev>INT_MAX/10){
                return 0;
            }
            else{
                rev=rev*10+digit;
                x/=10;
            }
        }
        return rev;
    }  
};
